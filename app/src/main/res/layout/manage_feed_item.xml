<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout_feed"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView_titles_feed"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/courier_prime_code"
            android:text="@string/titles"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/textView_total_products"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/courier_prime_code"
            android:text="@string/no_of_products1"
            android:textAllCaps="true"
            android:textColor="#94997DA5"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_feeds_clicks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/button_edit_feeds"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="@string/fab"
            android:src="@drawable/edit"
            tools:ignore="TouchTargetSizeCheck" />
        <ImageView
            android:id="@+id/vertical_bar"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:src="@drawable/vertical_bar"
            />

        <ImageView
            android:id="@+id/button_delete_feeds"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="@string/fab"
            android:src="@drawable/delete"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</RelativeLayout>
